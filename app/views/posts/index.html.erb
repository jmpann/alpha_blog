
<h1>Your Posts</h1>
  <p>
    <%= link_to 'Create a new post', new_post_path%>
  </p>
</br>
  <%if @posts.empty?%>
    <%= "You currently have no blog posts" %>
  <%else%>
  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
    </tr>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Show', post_path(post) %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  <% end %>
</table>
